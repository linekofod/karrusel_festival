---
import "../styles/generel.css";
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Card from "../components/Cards.astro";
import "../styles/index.css";
import Cards from "../components/Cards.astro";
---

<MainLayout>
  <h1>Karrusel Festival</h1>
  <h2 id="h2_index">3 days of house, disco and tecno in the woods</h2>
  <img id="img" src="/public/index.webp" alt="Koncert billede" />

<div class="card">
  <Cards artist="SKIN ON SKIN" stage="MANEGEN">
    <img
    src="../../public/img/lineup/skin_on_skin.png"
    alt="Picture of the artist Mira"
  />
  </Cards>
  <Cards artist="RSS DISCO" stage="TRIBUNEN">
    <img
    src="../../public/img/lineup/rss_disco.png"
    alt="Picture of the artist Kölsch"
  />
  </Cards>
  <Cards artist="ÂME" stage="MANEGEN">
    <img
    src="../../public/img/lineup/âme.png"
    alt="Picture of the band Âme"
  /> 
  </Cards>
</div>
<div class="SeeAllArtist_button">
  <Button size="box" type="web" link_to="/lineup">See all artist</Button>

</div>



  <section class="grid_1-2">
    <Button size="box" type="web" link_to="/about">About Karrusel Festival</Button>
    <img src="/public/lys_karrusel.svg" alt="" />
  </section>

  <section >
    <div class="flex">
    <h2>Location</h2>
    <Button size="box" type="web" link_to="/map"> Full Map</Button>
</div>



  </section>




</MainLayout>
