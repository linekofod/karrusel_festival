---

<MainLayout>
  <article class="background">
    <div class="mobile_img"></div>
    <div class="indhold_flex">
      <div class="information">
        <h3>LOCATION</h3>
        <h4 class="stage">{myData.stage}</h4>
        <h3>SHOW DATE</h3>
        <h4 class="date">{myData.date}</h4>
        <h3>MORE</h3>
        <Button size="web" type="no_box" link_to={myData.spotify}>SPOTIFY</Button>
        <Button size="web" type="no_box" link_to={myData.instagram}>INSTAGRAM</Button>
      </div>

      <div class="artist_name">
        <h1 class="name">{myData.name}</h1>
        <h2 class="description">{myData.description}</h2>
        <Button size="box" type="web" link_to="/lineup">See all artists</Button>
      </div>
    </div>
  </article>
</MainLayout>

<style>
  @media screen and (min-width: 700px) {
    h2 {
      font-size: 24px;
      margin-bottom: 20px;
    }
    h4 {
      margin-bottom: 20px;
    }
    .background {
      background-image: url("/singleview_artist.jpg");
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      height: 100vh;
      margin-left: -2em;
      margin-right: -2em;
      margin-top: -8em;
      z-index: -1;
    }
    .indhold_flex {
      display: grid;
      grid-template-columns: 300px auto;
      position: absolute;
      background-color: rgba(09, 09, 09, 0.5);
      height: 50%;
      position: absolute;
      bottom: 0;
    }
    .information {
      display: flex;
      flex-direction: column;
      margin: 20% 0 0 30%;
    }
    .information p {
      margin-bottom: 2em;
    }
    .artist_name {
      margin: 2% 15% 0 20%;
    }
